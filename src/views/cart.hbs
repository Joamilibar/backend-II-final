<div>
  <h1>{{title}}</h1>
  <ul>
    {{#each cart.products}}
      <li>
        <h2>Producto: {{this.product.title}}</h2>
        <p>Precio: {{this.product.price}}</p>
        <p>Cantidad: {{this.quantity}}</p>
      </li>
    {{/each}}
  </ul>

  <!-- Botón para finalizar la compra -->
  <button id="purchaseButton">Finalizar compra</button>

  <!-- Lugar para mostrar el mensaje de éxito o error -->
  <div id="purchaseMessage"></div>
</div>

<!-- Enlace al script que manejará el evento del botón -->
<script src="/js/cart.js"></script>